<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/slagless"
            android:gravity="center"
            android:text=" Quotavia: A Project by \nKrushnal Patil "
            android:textColor="@color/design_default_color_on_primary"
            android:textSize="25sp"></TextView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/webBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/roundcorner"
                android:padding="10dp"
                android:src="@drawable/world"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_marginHorizontal="5dp"
                >

            </ImageButton>

            <ImageButton
                android:id="@+id/instagramBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/roundcorner"
                android:padding="12dp"
                android:src="@drawable/instagram"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_marginHorizontal="5dp"
                >

            </ImageButton>

            <ImageButton
                android:id="@+id/linkedinBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/roundcorner"
                android:padding="10dp"
                android:src="@drawable/linkedin"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_marginHorizontal="5dp"
                >

            </ImageButton>

            <ImageButton
                android:id="@+id/githubBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/roundcorner"
                android:padding="9dp"
                android:src="@drawable/github"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_marginHorizontal="5dp"
                >

            </ImageButton>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-40dp"
        android:padding="30dp"
        app:cardCornerRadius="45dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        app:cardBackgroundColor="@color/material_on_background_emphasis_high_type">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="35dp">


                <ImageView
                    android:id="@+id/imageViewIdLiked"
                    android:layout_width="380dp"
                    android:layout_height="380dp"
                    android:layout_gravity="center"
                    android:src="@drawable/nothing"
                    android:alpha="1">

                </ImageView>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <Button
                    android:id="@+id/prevBtnLiked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Previos"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/slagless"/>


                <Button
                    android:id="@+id/nextBtnLiked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/slagless"/>

            </LinearLayout>

            <Button
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/slagless"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>







</RelativeLayout>